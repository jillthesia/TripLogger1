<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65b8ac"
    tools:context="com.example.jillthesia.trip2.MainActivity">



    <Button
        android:id="@+id/logButton"
        android:background="#35d32727"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log"
        android:layout_alignBaseline="@+id/settingsButton"
        android:layout_alignBottom="@+id/settingsButton"
        android:layout_toLeftOf="@+id/settingsButton"
        android:layout_toStartOf="@+id/settingsButton"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Button

        android:text="Settings"
        android:background="#35d32727"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="17dp"
        android:id="@+id/settingsButton" />





    <ListView
        android:id="@+id/list"
        android:layout_below="@+id/logButton"
        android:dividerHeight="2dp"
        android:divider="#2121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>
