<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jillthesia.trip2.log">

    <EditText
        android:id="@+id/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        android:hint="Enter Title"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/mapView"
        android:layout_alignEnd="@+id/mapView"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <EditText
        android:id="@+id/editTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        android:hint="Enter Title"
        android:layout_below="@+id/editDateText"
        android:layout_alignLeft="@+id/editDateText"
        android:layout_alignStart="@+id/editDateText"
        android:layout_marginTop="33dp" />

    <EditText
        android:id="@+id/editDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        android:hint="Enter Date"
        android:layout_below="@+id/TitleText"
        android:layout_alignLeft="@+id/TitleText"
        android:layout_alignStart="@+id/TitleText"
        android:layout_marginTop="27dp" />

    <EditText
        android:id="@+id/editTripTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        android:hint="Choose one Work, Personal or Commute"
        android:layout_below="@+id/editTitleText"
        android:layout_alignLeft="@+id/editTitleText"
        android:layout_alignStart="@+id/editTitleText"
        android:layout_marginTop="20dp" />



    <EditText
        android:id="@+id/editDestinationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        android:hint="Enter Destination"
        android:layout_above="@+id/mapView"
        android:layout_alignLeft="@+id/editTripTypeText"
        android:layout_alignStart="@+id/editTripTypeText"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="40dp" />

    <EditText
        android:id="@+id/editDurationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        android:hint="Enter Duration"
        android:layout_above="@+id/editCommentText"
        android:layout_alignLeft="@+id/editDestinationText"
        android:layout_alignStart="@+id/editDestinationText"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editCommentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        android:hint="Enter Comment"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editDestinationText"
        android:layout_alignStart="@+id/editDestinationText" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:background="@drawable/row_bg"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_above="@+id/saveButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="21dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCommentText"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/cancelButton"
        android:layout_toStartOf="@+id/cancelButton"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/mapView"
        android:layout_alignEnd="@+id/mapView" />


</RelativeLayout>
